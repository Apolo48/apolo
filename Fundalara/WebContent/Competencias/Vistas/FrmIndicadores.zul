<?page title="new page title" contentType="text/html;charset=UTF-8"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver" ?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" root="frmIndicador" ?>

<zk>
	<div align="center">
		<window title="Registrar Indicadores" border="normal"
			closable="true" width="690px" id="frmIndicador"
			 style="left">
			<panel border="normal">
				<caption label="Datos de la Competencia"></caption>
				<panelchildren>
					<grid>
						<columns>
							<column width="40px" align="left"></column>
							<column width="40px"></column>
							<column width="60px"></column>
							<column width="60px"></column>
							<column width="50px"></column>
							<column width="60px"></column>
						</columns>
						<rows>
							<row style="border:none">
								<label value="Nombre"></label>
								<hbox>
									<textbox id="txtNombreCompetencia"
										value="@{cntrl.competencia.nombre }">
									</textbox>
									<button id="btnBuscar"
										image="../../Recursos/Imagenes/consultar.ico">
									</button>
								</hbox>
								<label value="Tipo"></label>
								<textbox id="txtTipoCompetencia"
									disabled="true">
								</textbox>
								<label value="Modalidad"></label>
								<textbox id="txtModalidadCompetencia"
									disabled="true">
								</textbox>
							</row>
							<row style="border:none">
								<label value="Fecha Inicio"></label>
								<datebox id="txtFechaInicioCompetencia"
									value="@{cntrl.competencia.fechaInicio }" disabled="true" />
								<label value="Fecha Fin"></label>
								<datebox id="txtFechaFin"
									value="@{cntrl.competencia.fechaFin }" disabled="true" />
							</row>
						</rows>
					</grid>
				</panelchildren>
			</panel>
			<tabbox>

				<tabs>
					<tab label="Indicadores Individuales" />
					<tab label="Indicadores Colectivos" />
				</tabs>

				<tabpanels>
					<tabpanel>
						<panel>
							<panelchildren>

								<grid>
									<columns>
										<column width="80%"></column>
										<column width="80%"></column>
									</columns>

									<rows>

										<row style="border:none"
											align="left">
											<hbox>
												<label
													value="Categoría" />
												<space width="5%"></space>
												<combobox
													model="@{cntrl.categorias}" value="--Seleccione--">
													<comboitem
														self="@{each=categoriaCompetencia }"
														label="@{categoriaCompetencia.categoria.nombre }">
													</comboitem>
												</combobox>
											</hbox>
										</row>
										<row style="border:none"
											align="left">
											<hbox>
												<label
													value="Modalidad" />
												<space width="5%"></space>
												<combobox
													value="--Seleccione--">
													<comboitem
														label="Ofensivo" />
													<comboitem
														label="Defensivo" />
												</combobox>
											</hbox>
										</row>
									</rows>
								</grid>

								<grid>
									<columns>
										<column width="45%"></column>
										<column width="12%"
											align="Center">
										</column>
										<column width="45%"></column>
									</columns>
									<rows>
										<row style="border:none">
											<listbox
												id="lsbxIndicadores" mold="paging" style="margin-top:5px"
												model="@{cntrl.indicadores}" height="200px">
												<listhead>
													<listheader label=""
														sort="auto" width="20%">
														<checkbox></checkbox>
													</listheader>
													<listheader
														label="Indicadores" sort="auto" />
												</listhead>
												<listitem
													self="@{each=indicador}">
													<listcell>
														<checkbox />
													</listcell>
													<listcell
														label="@{indicador.nombre}">
													</listcell>
												</listitem>
											</listbox>

											<grid>
												<rows>
													<row
														style="border:none" align="center">
														<button
															onClick="" image="/Recursos/Imagenes/rightarrow_g.png"
															style="center" />
													</row>
													<row
														style="border:none" align="center">
														<button
															onClick="" image="/Recursos/Imagenes/leftarrow_g.png"
															style="center" />
													</row>

												</rows>
											</grid>

											<listbox
												id="lsbxIndicadoresSeleccionados" mold="paging"
												style="margin-top:5px" height="200px">
												<listhead>
													<listheader label=""
														sort="auto" width="20%">
														<checkbox></checkbox>
													</listheader>
													<listheader
														label="Indicadores Seleccionados" sort="auto" />
												</listhead>

											</listbox>
										</row>
									</rows>
								</grid>

							</panelchildren>
						</panel>


					</tabpanel>

					<!--  Indicadores Colectivos -->
					<tabpanel>
						<panel>
							<panelchildren>

								<grid>
									<columns>
										<column width="80%"></column>
										<column width="80%"></column>
									</columns>

									<rows>

										<row style="border:none"
											align="left">
											<hbox>
												<label
													value="Categoría" />
												<space width="5%"></space>
												<combobox
													model="@{cntrl.categorias}" value="--Seleccione--">
													<comboitem
														self="@{each=categoriaCompetencia }"
														label="@{categoriaCompetencia.categoria.nombre }">
													</comboitem>
												</combobox>
											</hbox>
										</row>
										<row style="border:none"
											align="left">
											<hbox>
												<label
													value="Modalidad" />
												<space width="5%"></space>
												<combobox
													value="--Seleccione--">
													<comboitem
														label="Ofensivo" />
													<comboitem
														label="Defensivo" />
												</combobox>
											</hbox>
										</row>
									</rows>
								</grid>

								<grid>
									<columns>
										<column width="45%"></column>
										<column width="12%"
											align="Center">
										</column>
										<column width="45%"></column>
									</columns>
									<rows>
										<row style="border:none">
											<listbox
												id="lsbxIndicadoresColectivos" mold="paging"
												style="margin-top:5px" model="@{cntrl.indicadores}"
												height="200px">
												<listhead>
													<listheader label=""
														sort="auto" width="20%">
														<checkbox></checkbox>
													</listheader>
													<listheader
														label="Indicadores" sort="auto" />
												</listhead>
												<listitem
													self="@{each=indicador}">
													<listcell>
														<checkbox />
													</listcell>
													<listcell
														label="@{indicador.nombre}">
													</listcell>
												</listitem>
											</listbox>

											<grid>
												<rows>
													<row
														style="border:none" align="center">
														<button
															onClick="" image="/Recursos/Imagenes/rightarrow_g.png"
															style="center" />
													</row>
													<row
														style="border:none" align="center">
														<button
															onClick="" image="/Recursos/Imagenes/leftarrow_g.png"
															style="center" />
													</row>

												</rows>
											</grid>

											<listbox
												id="lsbxIndicadoresSeleccionadosColectivos" mold="paging"
												style="margin-top:5px" height="200px">
												<listhead>
													<listheader label=""
														sort="auto" width="20%">
														<checkbox></checkbox>
													</listheader>
													<listheader
														label="Indicadores Seleccionados" sort="auto" />
												</listhead>

											</listbox>
										</row>
									</rows>
								</grid>

							</panelchildren>
						</panel>


					</tabpanel>
				</tabpanels>
			</tabbox>
			<div>
				<div align="right" height="30px">
					<button image="/Recursos/Imagenes/guardar.ico"
						label="Guardar" orient="horizontal">
					</button>
					<button image="/Recursos/Imagenes/eliminar.ico"
						label="Eliminar" orient="horizontal">
					</button>
					<button image="/Recursos/Imagenes/cancelar.ico"
						label="Cancelar" orient="horizontal">
					</button>
					<button image="/Recursos/Imagenes/salir.png"
						label="Salir" orient="horizontal">
					</button>
				</div>
			</div>

		</window>
	</div>
</zk>